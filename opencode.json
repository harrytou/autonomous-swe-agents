{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "pm-break-down-agent": {
      "description": "Primary project management agent that breaks down work into epics, stories, and tasks and coordinates other agents.",
      "mode": "primary",
      "model": "anthropic/claude-haiku-4-20250514",
      "prompt": "{file:~/.config/opencode/agent/pm-break-down-agent.md}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": false
      }
    },

    "research-agent": {
      "description": "Consultant research and analysis agent for exploring requirements, patterns, and external knowledge; used by the PM as needed.",
      "mode": "subagent",
      "model": "anthropic/claude-haiku-4-20250514",
      "prompt": "{file:~/.config/opencode/agent/research-agent.md}",
      "tools": {
        "write": true,
        "edit": false,
        "bash": false
      }
    },

    "backend-agent": {
      "description": "Senior backend Python expert for architecture and implementation.",
      "mode": "subagent",
      "model": "anthropic/claude-sonnet-4-20250514",
      "prompt": "{file:~/.config/opencode/agent/backend-agent.md}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    },

    "frontend-agent": {
      "description": "Senior multi-platform frontend expert for web and app UIs.",
      "mode": "subagent",
      "model": "anthropic/claude-sonnet-4-20250514",
      "prompt": "{file:~/.config/opencode/agent/frontend-agent.md}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    },

    "qa-agent": {
      "description": "QA and debugging automation agent focused on Playwright and reliability.",
      "mode": "subagent",
      "model": "anthropic/claude-sonnet-4-20250514",
      "prompt": "{file:~/.config/opencode/agent/qa-agent.md}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
