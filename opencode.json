    "cloud-agent": {
      "description": "Cloud and DevOps agent for CI/CD, infra-as-code, and deployments.",
      "mode": "subagent",
      "model": "anthropic/claude-sonnet-4-20250514",
      "prompt": "{file:~/.config/opencode/agent/cloud-agent.md}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    }
  }
